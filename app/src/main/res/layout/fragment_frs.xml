<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/prasyarat"
            android:textSize="30sp"
            android:textStyle="bold"
            android:paddingStart="15dp"
            android:paddingTop="15dp"
            android:id="@+id/titleListPrasyarat"/>
        <ListView
            android:layout_margin="10dp"
            android:background="@color/white"
            android:dividerHeight="15dp"
            android:id="@+id/lv_listPrasyarat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleListPrasyarat"
            android:layout_marginBottom="100dp">
        </ListView>
        <ImageView
            android:id="@+id/add_semester"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:src="@android:drawable/ic_menu_add"
            android:layout_marginBottom="50dp"
            android:layout_marginEnd="20dp">
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/menu"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:elevation="30dp">
            <ImageView
                android:id="@+id/menu_home"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_home_24"
                android:layout_gravity="center"
                android:layout_weight="1">
            </ImageView>
            <ImageView
                android:id="@+id/menu_announcement"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_announcement"
                android:layout_weight="1">
            </ImageView>
            <ImageView
                android:id="@+id/menu_appointment"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_appointment"
                android:layout_weight="1">
            </ImageView>
            <ImageView
                android:id="@+id/menu_frs"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_frs"
                android:layout_weight="1">
            </ImageView>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>