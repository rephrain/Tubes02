<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <TextView
                android:id="@+id/btn_back"
                android:layout_height="wrap_content"
                android:layout_width="30dp"
                android:text="@string/back"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="@color/gray"
                android:layout_weight="1"
                android:textAlignment="center"
                android:elevation="25dp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/pagefrs"
                android:textSize="30sp"
                android:layout_weight="2"
                android:textStyle="bold"
                android:paddingLeft="15dp"
                android:textColor="@color/darkgrey"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/menu"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:elevation="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/semester_text"
                    android:layout_weight="2"
                    android:textSize="22sp"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/semester_sekarang"
                    android:layout_weight="1"
                    android:textSize="20sp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/matkul_text"
                android:textSize="22sp"/>
            <Button
                android:id="@+id/frs_matkul"
                style="?android:spinnerStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pilih Mata Kuliah"
                android:outlineAmbientShadowColor="@color/lightgrey"
                android:paddingLeft="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/lightgrey"
                android:textSize="15sp"></Button>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/prasyarat"
                android:textSize="22sp" />
        </LinearLayout>
        <ListView
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:dividerHeight="15dp"
            android:id="@+id/lv_listMatkul"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/semestertahun"
            android:divider="#00000000"
            android:elevation="25dp">
        </ListView>
        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit_text"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/gray"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"/>
    </LinearLayout>
</FrameLayout>